  form > input{
  font-size:15px;
}
input{
    border: none;
    background-color: #2d2d2d;
    color: beige;
    font-size: 15px;
    border-radius:10px;
    padding: 5px;
    width: 300px;
}
.input_alert{
  font-size: 12px;
  color:rgb(255, 78, 78)
}
#friend-btn-container,#follow-btn-container{
